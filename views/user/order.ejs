<%- include('../user/layout/user-header-layout.ejs') -%>
    <header id="fh5co-header" class="fh5co-cover fh5co-cover-sm" role="banner"
        style="background-image:url('https://cdn.eso.org/images/thumb300y/eso1907a.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2 text-center">
                    <div class="display-t">
                        <div class="display-tc animate-box" data-animate-effect="fadeIn">
                            <h1>Confirm Order</h1>
                            <h2>Make sure You Read The Terms And Conditions In the Former Page 
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>



    <div id="fh5co-product">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-1 animate-box">
                    <div class="owl-carousel owl-carousel-fullwidth product-carousel">
                        <div class="item">
                            <div class="active text-center">
                                <figure>
                                    <img src="/images/car/<%= product.image %>" alt="image">
                                </figure>
                            </div>
                        </div>
                        <% product.image.forEach((x)=> { %>
    
                            <div class="item">
                                <div class="active text-center">
                                    <figure>
                                        <img src="/images/car/<%= x %>" alt="image">
                                    </figure>
                                </div>
                            </div>
                            <% }) %>
                         
                    </div>
                    <div class="row animate-box">
                        <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                            <h2><%= product.brand.brand %> <%= product.productName %></h2>
                            <p>
                                <div style="display: flex; justify-content: center;">
                                    <% if(product.status == "Unblocked") { %>
                                        <form action="/carblockingpage/<%= product._id %> " method="get">
                                            <button type="submit" class="btn btn-success btn-outline btn-lg" style="width: 200px;">Block Vehicle</button>
                                        </form>
                                    <% } else { %>
                                        <form action="" method="get">
                                            <button type="submit" class="btn btn-Danger btn-outline btn-lg" style="width: 200px;">In Blocked</button>
                                        </form>
                                    <% } %>
                                    <form action="/addToWishlist/<%= product._id %> " method="post">
                                        <button type="submit" class="btn btn-primary btn-outline btn-lg" style="width: 200px;"> Add to WishList</button>
                                    </form>
    
                                </div>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <div class="fh5co-tabs animate-box">
                        <ul class="fh5co-tab-nav">
                            <li class="active"><a href="#" data-tab="1"><span class="icon visible-xs"><i class="icon-file"></i></span><span class="hidden-xs">Product Details</span></a></li>
                            
                        </ul>
    
                        <!-- Tabs -->
                        <div class="fh5co-tab-content-wrap">
    
                            <div class="fh5co-tab-content tab-content active" data-tab-content="1">
                                <div class="col-md-10 col-md-offset-1">
                                    <span class="price">RS: <%= product.price %></span>
                                    <h2><%= product.brand.brand %> <%= product.productName %></h2>
                                    
                                    <!-- <p></p> -->
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h2 class="uppercase">MODEL</h2>
                                            <p><%= product.type.typeName %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <h2 class="uppercase"> BRAND </h2>
                                            <p><%= product.brand.brand %></p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h2 class="uppercase">FUEL TYPE</h2>
                                            <p><%= product.fuelType.fuelType %></p>
                                        </div>
                                        <div class="col-md-6">
                                            <h2 class="uppercase"> NAME </h2>
                                            <p><%= product.productName %></p>
                                        </div>
                                    </div>
    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h2 class="uppercase">DESCRIPTION</h2>
                                            <p><%= product.discription %></p>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
    
                        </div>
    
                    </div>
                </div>
            </div>
        </div>
    </div>
    

    



    <%- include('../user/layout/user-footer-layout.ejs') -%>