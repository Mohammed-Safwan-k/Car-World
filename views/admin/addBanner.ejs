<%-include('../admin/layout/admin-header-layout.ejs') -%>

    <div class="col-lg">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Add Banner</div>
                <hr>
                <form action="/admin/addBanner" method="post" enctype="multipart/form-data">


                    <div class="form-group">
                        <label for="input-4">Banner Name</label>
                        <input class="form-control" id="input-4" type="text" placeholder="Banner Name" required
                            name="bannerName">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Details</label>
                        <input class="form-control" id="input-5" type="text" placeholder="Details" required
                            name="discription">
                    </div>

                    <div class="form-group">
                        <label for="input-5">Image</label>
                        <input type="file" class="form-control" multiple id="input-5" name="image" required
                            placeholder="Choose an image" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success px-5"> Add Banner</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


