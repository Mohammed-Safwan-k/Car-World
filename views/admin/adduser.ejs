


<%-include('../admin/layout/admin-header-layout.ejs') -%>

<div class="col-lg">
  <div class="card">
    <div class="card-body">
    <div class="card-title">Add User</div>
    <hr>
     <form action="/admin/adduser" method="post">

    <div class="form-group">
     <label for="input-4">Full Name</label>
     <input class="form-control" id="input-4" type="text" placeholder="Full Name" required name="fullName">
    </div>

    <div class="form-group">
     <label for="input-5">User Name</label>
     <input class="form-control" id="input-5" type="text" placeholder="User Name" required name="userName">
    </div>

    <div class="form-group">
        <label for="input-5">Email</label>
        <input class="form-control" id="input-5" type="email" placeholder="Email" required name="email">
    </div>

    <div class="form-group">
        <label for="input-5">Phone Number</label>
        <input class="form-control" id="input-5" type="tel" placeholder="Phone Number" required name="phone">
    </div>

    <div class="form-group">
      <label for="input-5">Password</label>
      <input class="form-control" id="input-5" type="password" placeholder="Password" required pattern=".{8,}" name="password">
      <label for="input-5">At least 8 character</label>
 
    </div>
    
    <div class="form-group">
     <button type="submit" class="btn btn-success px-5"> Add User</button>
   </div>
   </form>
  </div>
  </div>
</div>


<%-include('../admin/layout/admin-footer-layout') -%>