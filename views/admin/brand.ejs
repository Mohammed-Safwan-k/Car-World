<html>

<head>
    <title>BRAND</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>

    <div class="card mt-2 mx-4 ">
        <div class="table-responsive text-nowrap">
            <form action="/admin/addBrand" method="post" class="mx-4 mt-4">
                <div class="input-group">
                    <input type="text" name="brand" class="form-control" placeholder="Brand" required />
                    <button class="btn btn-success" type="submit" id="button-addon2">
                        Add new
                    </button>
                </div>
            </form>

            <div class="card mt-2 mx-4">
                <h5 class="card-header">Brand</h5>
                <div class="table-responsive text-nowrap">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Brand</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            <% brand.forEach(function(x) { %>
                            <tr>
                                <td><%= x.brand %></td>

                                <td>
                                    <div class="text-center">
                                        <form action="/admin/deletebrand/<%= x._id %>" method="post">
                                            <button type="submit" class="btn dropdown-item"
                                                onclick="return confirm('Are you sure you want to delete ?')">Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>
</body>

</html>