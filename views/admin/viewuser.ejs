<%- include('../admin/layout/admin-header-layout.ejs') -%>

  <div class="col-lg">
    <div class="card">
      <div class="card-body">
        <div style="display: flex; justify-content: space-between;">
          <h5 class="card-title">Users</h5>
          <div>
            <form action="/admin/adduserpage" method="get">
              <button class="btn btn-dark me-md-2" type="submit">Add User</button>
            </form>
          </div>

        </div>

        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">Account Status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% users.forEach(function(user){ %>
                <tr>
                  <th scope="row">
                    <%= index++ %>
                  </th>
                  <td>
                    <%= user.fullName %>
                  </td>
                  <td>
                    <%= user.userName %>
                  </td>
                  <td>
                    <%= user.email %>
                  </td>
                  <td>
                    <%= user.phone %>
                  </td>
                  <td>
                    <%= user.status %>
                  </td>
                  <td>
                    <% if (user.status=="Blocked" ) { %>
                      <form action="/admin/unblockUser/<%= user._id %> " method="post">
                        <button type="submit" class="btn btn-success"> UnBlock</button>
                      </form>
                      <% } else { %>
                        <form action="/admin/blockUser/<%= user._id %> " method="post">
                          <button type="submit" class="btn btn-danger">
                            Block</button>
                        </form>
                        <% } %>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%- include('../admin/layout/admin-footer-layout.ejs') -%>